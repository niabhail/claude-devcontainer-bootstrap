{
  "mcpServers": {
    "__CONDITIONAL_TASKMASTER__": {
      "task-master-ai": {
        "command": "npx",
        "args": [
          "-y",
          "--package=task-master-ai",
          "task-master-ai"
        ],
        "env": {
          "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
        }
      }
    },
    "__SUPERCLAUDE_CORE__": {
      "context7": {
        "command": "npx",
        "args": [
          "-y",
          "@upstash/context7-mcp@latest"
        ]
      },
      "sequential-thinking": {
        "command": "npx",
        "args": [
          "-y",
          "@modelcontextprotocol/server-sequential-thinking"
        ]
      }
    },
    "__SUPERCLAUDE_UI__": {
      "magic": {
        "command": "npx",
        "args": [
          "@21st-dev/magic"
        ],
        "env": {
          "TWENTYFIRST_API_KEY": "${TWENTYFIRST_API_KEY}"
        }
      },
      "playwright": {
        "command": "npx",
        "args": [
          "@playwright/mcp@latest"
        ]
      }
    },
    "__SUPERCLAUDE_CODEOPS__": {
      "morphllm-fast-apply": {
        "command": "npx",
        "args": [
          "@morph-llm/morph-fast-apply"
        ],
        "env": {
          "MORPH_API_KEY": "${MORPH_API_KEY}"
        }
      },
      "serena": {
        "command": "uv",
        "args": [
          "run",
          "serena",
          "start-mcp-server",
          "--context",
          "ide-assistant"
        ],
        "cwd": "$HOME/.claude/serena"
      }
    },
    "__USER_EXTENSIONS__": {
      "_comment": "Add your custom MCP servers below this section",
      "_example": {
        "_comment": "Uncomment and modify as needed",
        "_my-custom-tool": {
          "command": "npx",
          "args": ["-y", "my-custom-mcp"]
        }
      }
    }
  }
}